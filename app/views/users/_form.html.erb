<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', object: f.object %> 
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
	  <%= f.label "Specialty" %><br />
	  <%= f.select :skill_ids, Skill.all.collect {|p| [ p.name, p.id ]}, {:multiple=>true} %>
  <div class="actions">
    <%= f.submit "Create account", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
